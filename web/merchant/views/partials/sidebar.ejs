<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/merchant" class="brand-link">
    <img src="https://cdn.jsdelivr.net/npm/admin-lte@4.0.0-beta3/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">Merchant Hub</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="https://cdn.jsdelivr.net/npm/admin-lte@4.0.0-beta3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <a href="#" class="d-block">
          <% if (typeof user !== 'undefined' && user) { %>
            <%= user.name || user.email || 'Merchant' %>
          <% } else { %>
            Merchant
          <% } %>
        </a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        
        <!-- Dashboard -->
        <li class="nav-item">
          <a href="/merchant" class="nav-link <% if (pageName === 'Dashboard') { %>active<% } %>">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>Dashboard</p>
          </a>
        </li>

        <!-- Products -->
        <li class="nav-item <% if (pageName.includes('Product')) { %>menu-open<% } %>">
          <a href="#" class="nav-link <% if (pageName.includes('Product')) { %>active<% } %>">
            <i class="nav-icon fas fa-box"></i>
            <p>
              Products
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/merchant/products" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>All Products</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/merchant/products/create" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Add Product</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- Orders -->
        <li class="nav-item <% if (pageName.includes('Order')) { %>menu-open<% } %>">
          <a href="#" class="nav-link <% if (pageName.includes('Order')) { %>active<% } %>">
            <i class="nav-icon fas fa-shopping-cart"></i>
            <p>
              Orders
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/merchant/orders" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>All Orders</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/merchant/orders?status=pending" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Pending</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- Inventory -->
        <li class="nav-item">
          <a href="/merchant/inventory" class="nav-link <% if (pageName.includes('Inventory')) { %>active<% } %>">
            <i class="nav-icon fas fa-boxes"></i>
            <p>Inventory</p>
          </a>
        </li>

        <!-- Finances -->
        <li class="nav-item">
          <a href="/merchant/finances" class="nav-link <% if (pageName.includes('Finance')) { %>active<% } %>">
            <i class="nav-icon fas fa-wallet"></i>
            <p>Finances</p>
          </a>
        </li>

        <!-- Settings -->
        <li class="nav-item">
          <a href="/merchant/settings" class="nav-link <% if (pageName.includes('Setting')) { %>active<% } %>">
            <i class="nav-icon fas fa-cog"></i>
            <p>Settings</p>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</aside>
