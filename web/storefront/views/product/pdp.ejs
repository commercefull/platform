<%- include("../partials/header") %>

<main class="min-h-screen bg-gray-50">
  <!-- Flash Messages -->
  <% if (successMsg || errorMsg) { %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-4">
    <% if (successMsg) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded-lg mb-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        <%= successMsg %>
      </div>
    </div>
    <% } %>

    <% if (errorMsg) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-4">
      <div class="flex items-center">
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
        </svg>
        <%= errorMsg %>
      </div>
    </div>
    <% } %>
  </div>
  <% } %>

  <!-- Breadcrumb -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <nav class="flex text-sm text-gray-500">
      <a href="/" class="hover:text-blue-600">Home</a>
      <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <a href="/products" class="hover:text-blue-600">Products</a>
      <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
      <span class="text-gray-900"><%= product.name %></span>
    </nav>
  </div>

  <!-- Product Details -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Product Images -->
      <div class="space-y-4">
        <div class="aspect-square bg-white rounded-xl overflow-hidden shadow-lg">
          <img
            src="<%= product.images && product.images.length > 0 ? product.images[0] : 'data:image/svg+xml;base64,' %>"
            alt="<%= product.name %>"
            class="w-full h-full object-cover"
          >
        </div>
        <!-- Thumbnail Gallery (if multiple images) -->
        <% if (product.images && product.images.length > 1) { %>
        <div class="grid grid-cols-4 gap-4">
          <% product.images.slice(0, 4).forEach((image, index) => { %>
          <button class="aspect-square bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow border-2 border-transparent hover:border-blue-500">
            <img src="<%= image %>" alt="<%= product.name %> - View <%= index + 1 %>" class="w-full h-full object-cover">
          </button>
          <% }) %>
        </div>
        <% } %>
      </div>

      <!-- Product Information -->
      <div class="space-y-6">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= product.name %></h1>
          <div class="flex items-center space-x-4 mb-4">
            <div class="flex items-center">
              <% for(let star = 1; star <= 5; star++) { %>
                <svg class="w-5 h-5 <%= star <= 4 ? 'text-yellow-400 fill-current' : 'text-gray-300' %>" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              <% } %>
              <span class="text-sm text-gray-600 ml-2">(4.5 â€¢ 127 reviews)</span>
            </div>
          </div>
          <div class="text-3xl font-bold text-gray-900 mb-4">
            $<%= product.price ? parseFloat(product.price).toFixed(2) : '0.00' %>
          </div>
        </div>

        <!-- Product Description -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Description</h3>
          <p class="text-gray-600 leading-relaxed">
            <%= product.description || 'No description available for this product.' %>
          </p>
        </div>

        <!-- Product Details -->
        <div class="grid grid-cols-2 gap-4 py-4 border-t border-b border-gray-200">
          <div>
            <span class="text-sm text-gray-500">Category</span>
            <p class="font-medium text-gray-900"><%= product.categoryName || 'General' %></p>
          </div>
          <div>
            <span class="text-sm text-gray-500">Brand</span>
            <p class="font-medium text-gray-900"><%= product.manufacturer || 'N/A' %></p>
          </div>
          <div>
            <span class="text-sm text-gray-500">SKU</span>
            <p class="font-medium text-gray-900"><%= product.sku || product.productId %></p>
          </div>
          <div>
            <span class="text-sm text-gray-500">Availability</span>
            <p class="font-medium <%= product.isActive && product.stock > 0 ? 'text-green-600' : 'text-red-600' %>">
              <%= product.isActive && product.stock > 0 ? `In Stock (${product.stock})` : (product.stock > 0 ? 'Coming Soon' : 'Sold Out') %>
            </p>
          </div>
        </div>

        <!-- Add to Cart Section -->
        <% if (product.isActive && product.stock > 0) { %>
        <div class="space-y-4">
          <div class="flex items-center space-x-4">
            <div class="flex items-center border border-gray-300 rounded-lg">
              <button class="p-3 text-gray-600 hover:text-gray-800 hover:bg-gray-50">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                </svg>
              </button>
              <span class="px-4 py-3 text-gray-900 font-medium">1</span>
              <button class="p-3 text-gray-600 hover:text-gray-800 hover:bg-gray-50">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
              </button>
            </div>
            <span class="text-sm text-gray-600"><%= product.stock %> available</span>
          </div>

          <div class="flex space-x-4">
            <a
              href="/basket/add/<%= product.productId %>"
              class="flex-1 bg-blue-600 text-white py-4 px-6 rounded-lg font-semibold hover:bg-blue-700 transition-colors inline-flex items-center justify-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5H19M7 13v8a2 2 0 002 2h10a2 2 0 002-2v-3"></path>
              </svg>
              Add to Cart
            </a>
            <button class="p-4 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
              <svg class="w-5 h-5 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
              </svg>
            </button>
          </div>
        </div>
        <% } else { %>
        <div class="bg-gray-100 border border-gray-300 rounded-lg p-6 text-center">
          <svg class="w-12 h-12 text-gray-400 mx-auto mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">
            <%= product.stock > 0 ? 'Coming Soon' : 'Currently Unavailable' %>
          </h3>
          <p class="text-gray-600">This product is not available for purchase at the moment.</p>
          <% if (product.stock > 0) { %>
          <button class="mt-4 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
            Notify When Available
          </button>
          <% } %>
        </div>
        <% } %>

        <!-- Additional Information -->
        <div class="border-t border-gray-200 pt-6">
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-center">
            <div class="flex flex-col items-center">
              <svg class="w-8 h-8 text-green-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              <span class="text-sm font-medium text-gray-900">Free Shipping</span>
              <span class="text-xs text-gray-600">On orders over $50</span>
            </div>
            <div class="flex flex-col items-center">
              <svg class="w-8 h-8 text-green-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm font-medium text-gray-900">30-Day Returns</span>
              <span class="text-xs text-gray-600">Easy return policy</span>
            </div>
            <div class="flex flex-col items-center">
              <svg class="w-8 h-8 text-green-600 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm font-medium text-gray-900">Premium Quality</span>
              <span class="text-xs text-gray-600">Handcrafted excellence</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("../partials/footer") %>