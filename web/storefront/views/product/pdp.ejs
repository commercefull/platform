<%- include("../partials/header") %>
<%- include("../partials/categories-navbar") %>
<div class="container">
  <!-- Flash messages -->
  <div class="row mt-3 mb-3">
    <div class="col-md-12 m-auto">
      <% if (successMsg) { %>
      <div id="success" class="alert alert-success">
        <%= successMsg %>
      </div>
      <% } else { %>
      <div id="success" class="alert alert-success d-none"></div>
      <% } %>
    </div>
    <div class="col-md-12 m-auto">
      <% if (errorMsg) { %>
      <div id="error" class="alert alert-danger">
        <%= errorMsg %>
      </div>
      <% } else { %>
      <div id="error" class="alert alert-danger d-none"></div>
      <% } %>
    </div>
  </div>
  <!-- Product info -->
  <div class="row mt-4 mb-4">
    <div class="col-md-5 mt-2 mr-2 ml-auto">
      <img
        src="<%=product.images && product.images.length > 0 ? product.images[0] : '/storefront/images/placeholder.jpg'%>"
        class="img-fluid product-img"
        alt="<%= product.name %>"
      />
    </div>
    <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
      <h2><%=product.name%></h2>
      <hr />
      <p class="price">USD $<%=product.price ? parseFloat(product.price).toFixed(2) : '0.00'%></p>
      <p class="lead"> Description: 
        <p><%=product.description || 'No description available.'%></p>
      </p>
      
      <p><strong>Category:</strong> <%=product.categoryName || 'General'%></p>
      <p><strong>Brand: </strong><%=product.manufacturer || 'N/A'%></p>
      <p><strong>Product code:</strong> <%=product.sku || product.productId%></p>
      <p><strong>Date added to the store:</strong> <%= product.createdAt ? new Date(product.createdAt).toLocaleDateString('en-US', { 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric' 
      }) : 'N/A'%></p>
      <% if(product.isActive && product.stock > 0) {%>
      <p class="is-available text-center">In stock (<%= product.stock %> available)</p>
      <a href="/basket/add/<%=product.productId%>" class="btn btn-block btn-secondary mt-3 mb-3 button-style">
        Add to Shopping Cart
      </a>
      <% } else { %>
      <p class="is-not-available text-center"><%= product.stock > 0 ? 'Coming Soon' : 'Sold out' %></p>
      <%} %>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>