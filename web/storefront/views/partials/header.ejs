<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% if (pageName) { %>
    <title>Commercefull | <%= pageName %></title>
    <%} else {%>
    <title>Commercefull - Premium Shopping Experience</title>
    <% } %>

    <!-- Tailwind CSS -->
    <link rel="stylesheet" href="/stylesheets/storefront/compiled.css">

    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Heroicons -->
    <script src="https://unpkg.com/heroicons@2.0.18/24/outline/index.js" type="module"></script>
  </head>

  <body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Left Navigation: Logo + Nav Items -->
          <div class="flex items-center space-x-8">
            <!-- Logo -->
            <div class="flex items-center">
              <a href="/" class="flex items-center space-x-2">
                <div class="w-10 h-10 bg-gradient-to-r from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                </div>
                <span class="text-xl font-bold text-gray-900">Commercefull</span>
              </a>
            </div>

            <!-- Mega Navigation -->
            <div class="hidden md:flex items-center space-x-8">
              <!-- Shop Dropdown -->
              <div class="relative">
                <button type="button" id="shop-dropdown-btn" class="flex items-center space-x-1 text-gray-700 hover:text-blue-600 transition-colors font-medium">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                  </svg>
                  <span>Shop</span>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>

                <!-- Mega Menu -->
                <div id="shop-dropdown-menu" class="absolute left-0 mt-2 w-screen max-w-4xl bg-white rounded-lg shadow-xl border border-gray-200 z-50 hidden">
                  <div class="p-6">
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                      <!-- All Products -->
                      <div>
                        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-3">Browse</h3>
                        <ul class="space-y-2">
                          <li>
                            <a href="/products" class="text-gray-600 hover:text-blue-600 transition-colors">
                              All Products
                            </a>
                          </li>
                          <li>
                            <a href="/search?q=new" class="text-gray-600 hover:text-blue-600 transition-colors">
                              New Arrivals
                            </a>
                          </li>
                          <li>
                            <a href="/search?q=sale" class="text-gray-600 hover:text-blue-600 transition-colors">
                              On Sale
                            </a>
                          </li>
                        </ul>
                      </div>

                      <!-- Categories -->
                      <% if (categories && categories.length > 0) { %>
                        <% categories.slice(0, 3).forEach((category, index) => { %>
                        <div>
                          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-3">
                            <%= category.title || category.name %>
                          </h3>
                          <ul class="space-y-2">
                            <li>
                              <a href="/products/category/<%= category.slug || category.name.toLowerCase().replace(/\s+/g, '-') %>"
                                 class="text-gray-600 hover:text-blue-600 transition-colors">
                                View All <%= category.title || category.name %>
                              </a>
                            </li>
                            <% if (category.subcategories && category.subcategories.length > 0) { %>
                              <% category.subcategories.slice(0, 2).forEach(sub => { %>
                              <li>
                                <a href="/products/category/<%= sub.slug || sub.name.toLowerCase().replace(/\s+/g, '-') %>"
                                   class="text-gray-600 hover:text-blue-600 transition-colors text-sm">
                                  <%= sub.name %>
                                </a>
                              </li>
                              <% }) %>
                            <% } %>
                          </ul>
                        </div>
                        <% }) %>
                      <% } else { %>
                        <!-- Fallback categories -->
                        <div>
                          <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-3">Categories</h3>
                          <ul class="space-y-2">
                            <li><a href="/products" class="text-gray-600 hover:text-blue-600 transition-colors">All Products</a></li>
                            <li><a href="/search?q=electronics" class="text-gray-600 hover:text-blue-600 transition-colors">Electronics</a></li>
                            <li><a href="/search?q=clothing" class="text-gray-600 hover:text-blue-600 transition-colors">Clothing</a></li>
                          </ul>
                        </div>
                      <% } %>
                    </div>

                    <!-- Featured Section -->
                    <div class="border-t border-gray-200 mt-6 pt-6">
                      <div class="flex items-center justify-between">
                        <div>
                          <h3 class="text-lg font-semibold text-gray-900">Featured Collections</h3>
                          <p class="text-gray-600 text-sm mt-1">Discover our curated product collections</p>
                        </div>
                        <a href="/products"
                           class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors font-medium">
                          Shop All
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Other Nav Items -->
              <a href="/" class="<%= pageName === 'Home' ? 'text-blue-600' : 'text-gray-700 hover:text-blue-600' %> transition-colors font-medium">
                Home
              </a>
              <a href="/pages/about-us" class="<%= pageName === 'About Us' ? 'text-blue-600' : 'text-gray-700 hover:text-blue-600' %> transition-colors font-medium">
                About
              </a>
              <a href="/pages/contact-us" class="<%= pageName === 'Contact Us' ? 'text-blue-600' : 'text-gray-700 hover:text-blue-600' %> transition-colors font-medium">
                Contact
              </a>
            </div>
          </div>

          <!-- Right Navigation: Search + Cart/User -->
          <div class="flex items-center space-x-4">
            <!-- Search Bar -->
            <div class="hidden md:flex max-w-md">
              <form class="w-full" action="/search" method="GET">
                <div class="relative">
                  <input
                    type="search"
                    name="q"
                    placeholder="Search products..."
                    class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                  >
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                  </div>
                </div>
              </form>
            </div>

            <!-- Cart -->
            <a href="/basket" class="relative p-2 text-gray-600 hover:text-blue-600 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5H19M7 13v8a2 2 0 002 2h10a2 2 0 002-2v-3"></path>
              </svg>
              <% if ((session && session.cart && session.cart.totalQty) || (typeof cartCount !== 'undefined' && cartCount > 0)) { %>
              <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center">
                <%= (session && session.cart && session.cart.totalQty) ? session.cart.totalQty : cartCount %>
              </span>
              <% } %>
            </a>

            <!-- User Menu -->
            <% if (user) { %>
            <div class="relative">
              <button type="button" id="user-menu-btn" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span class="hidden md:block text-sm font-medium"><%= user.username || user.email || 'Account' %></span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>

              <div id="user-menu-dropdown" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 z-50 hidden">
                <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  My Account
                </a>
                <a href="/orders" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                  My Orders
                </a>
                <div class="border-t border-gray-100"></div>
                <a href="/signout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                  <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                  </svg>
                  Sign Out
                </a>
              </div>
            </div>
            <% } else { %>
            <div class="flex items-center space-x-4">
              <a href="/signin" class="text-gray-600 hover:text-blue-600 transition-colors text-sm font-medium">
                Sign In
              </a>
              <a href="/signup" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors text-sm font-medium">
                Sign Up
              </a>
            </div>
            <% } %>

            <!-- Mobile menu button -->
            <button class="md:hidden p-2">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>

        <!-- Mobile Search -->
        <div class="md:hidden pb-4">
          <form action="/search" method="GET">
            <div class="relative">
              <input
                type="search"
                name="q"
                placeholder="Search products..."
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              >
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
            </div>
          </form>
        </div>
      </div>
    </nav>

