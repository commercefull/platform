<%- include('../../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-id-card me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/hub">Dashboard</a></li>
            <li class="breadcrumb-item active">Memberships</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Stats -->
      <div class="row">
        <div class="col-lg-3 col-6">
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= stats.totalMembers || 0 %></h3>
              <p>Total Members</p>
            </div>
            <div class="icon"><i class="fas fa-users"></i></div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= stats.activeMembers || 0 %></h3>
              <p>Active Members</p>
            </div>
            <div class="icon"><i class="fas fa-user-check"></i></div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <div class="small-box bg-warning">
            <div class="inner">
              <h3><%= (tiers || []).length %></h3>
              <p>Membership Tiers</p>
            </div>
            <div class="icon"><i class="fas fa-layer-group"></i></div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <div class="small-box bg-danger">
            <div class="inner">
              <h3><%= stats.expiringThisMonth || 0 %></h3>
              <p>Expiring This Month</p>
            </div>
            <div class="icon"><i class="fas fa-clock"></i></div>
          </div>
        </div>
      </div>

      <!-- Membership Tiers -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-layer-group me-2"></i>Membership Tiers</h3>
          <button class="btn btn-sm btn-success float-end" data-bs-toggle="modal" data-bs-target="#addTierModal">
            <i class="fas fa-plus me-1"></i>Add Tier
          </button>
        </div>
        <div class="card-body">
          <div class="row">
            <% (tiers || []).forEach(function(tier) { %>
            <div class="col-md-4 mb-3">
              <div class="card h-100 border-<%= tier.isDefault ? 'primary' : 'secondary' %>">
                <div class="card-header bg-<%= tier.isDefault ? 'primary' : 'light' %> <%= tier.isDefault ? 'text-white' : '' %>">
                  <h5 class="mb-0"><%= tier.name %></h5>
                  <% if (tier.isDefault) { %><span class="badge bg-warning">Default</span><% } %>
                </div>
                <div class="card-body">
                  <h3 class="text-center mb-3">
                    <% if (tier.price > 0) { %>
                    $<%= tier.price.toFixed(2) %>/<%= tier.billingPeriod || 'month' %>
                    <% } else { %>
                    Free
                    <% } %>
                  </h3>
                  <ul class="list-unstyled">
                    <% (tier.benefits || []).slice(0, 5).forEach(function(benefit) { %>
                    <li><i class="fas fa-check text-success me-2"></i><%= benefit %></li>
                    <% }); %>
                  </ul>
                  <p class="text-muted mb-0"><%= tier.memberCount || 0 %> members</p>
                </div>
                <div class="card-footer">
                  <button class="btn btn-sm btn-outline-primary" onclick="editTier('<%= tier.membershipTierId %>')">
                    <i class="fas fa-edit"></i> Edit
                  </button>
                  <button class="btn btn-sm btn-outline-danger" onclick="deleteTier('<%= tier.membershipTierId %>')">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
            <% }); %>
            <% if ((tiers || []).length === 0) { %>
            <div class="col-12 text-center text-muted py-4">
              <i class="fas fa-layer-group fa-3x mb-3 d-block"></i>
              No membership tiers configured.
            </div>
            <% } %>
          </div>
        </div>
      </div>

      <!-- Recent Members -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-users me-2"></i>Recent Members</h3>
          <a href="/hub/programs/membership/members" class="btn btn-sm btn-primary float-end">View All</a>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Member</th>
                <th>Tier</th>
                <th>Status</th>
                <th>Joined</th>
                <th>Expires</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% (members || []).slice(0, 10).forEach(function(member) { %>
              <tr>
                <td>
                  <strong><%= member.customerName || member.email %></strong>
                  <br><small class="text-muted"><%= member.email %></small>
                </td>
                <td><span class="badge bg-info"><%= member.tierName %></span></td>
                <td>
                  <span class="badge bg-<%= member.status === 'active' ? 'success' : member.status === 'expired' ? 'danger' : 'warning' %>">
                    <%= member.status %>
                  </span>
                </td>
                <td><%= new Date(member.startDate).toLocaleDateString() %></td>
                <td><%= member.endDate ? new Date(member.endDate).toLocaleDateString() : 'Never' %></td>
                <td>
                  <a href="/hub/programs/membership/members/<%= member.userMembershipId %>" class="btn btn-sm btn-outline-info">
                    <i class="fas fa-eye"></i>
                  </a>
                </td>
              </tr>
              <% }); %>
              <% if ((members || []).length === 0) { %>
              <tr>
                <td colspan="6" class="text-center text-muted py-4">No members yet.</td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Add Tier Modal -->
<div class="modal fade" id="addTierModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Membership Tier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form method="POST" action="/hub/programs/membership/tiers">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Tier Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="name" required placeholder="e.g., Gold">
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Price</label>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <input type="number" class="form-control" name="price" step="0.01" min="0" value="0">
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Billing Period</label>
                <select class="form-select" name="billingPeriod">
                  <option value="month">Monthly</option>
                  <option value="year">Yearly</option>
                  <option value="lifetime">Lifetime</option>
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Sort Order</label>
                <input type="number" class="form-control" name="sortOrder" value="0">
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="2"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Benefits (one per line)</label>
            <textarea class="form-control" name="benefits" rows="4" placeholder="Free shipping&#10;10% discount&#10;Early access"></textarea>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" name="isDefault" value="true" id="tierIsDefault">
            <label class="form-check-label" for="tierIsDefault">Set as default tier</label>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Tier</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function editTier(id) { window.location.href = `/hub/programs/membership/tiers/${id}/edit`; }
  async function deleteTier(id) {
    if (!confirm('Delete this tier?')) return;
    const res = await fetch(`/hub/programs/membership/tiers/${id}`, { method: 'DELETE' });
    if ((await res.json()).success) location.reload();
  }
</script>

<%- include('../../partials/footer') %>
