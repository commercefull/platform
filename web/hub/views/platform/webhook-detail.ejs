<%- include('../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-plug me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/hub">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/hub/platform/webhooks">Webhooks</a></li>
            <li class="breadcrumb-item active">Detail</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Webhook Info -->
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-info-circle me-2"></i>Webhook Configuration</h3>
              <div class="card-tools">
                <span class="badge bg-<%= webhook.isActive ? 'success' : 'secondary' %>">
                  <%= webhook.isActive ? 'Active' : 'Inactive' %>
                </span>
              </div>
            </div>
            <div class="card-body">
              <table class="table table-borderless">
                <tr>
                  <th style="width: 30%">Name</th>
                  <td><%= webhook.name %></td>
                </tr>
                <tr>
                  <th>URL</th>
                  <td><code style="word-break: break-all;"><%= webhook.url %></code></td>
                </tr>
                <tr>
                  <th>Secret</th>
                  <td>
                    <code id="webhookSecret" style="display: none;"><%= webhook.secret %></code>
                    <span id="secretMask">••••••••••••••••</span>
                    <button class="btn btn-sm btn-outline-secondary ms-2" onclick="toggleSecret()">
                      <i class="fas fa-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-primary ms-1" onclick="copySecret()">
                      <i class="fas fa-copy"></i>
                    </button>
                  </td>
                </tr>
                <tr>
                  <th>Created</th>
                  <td><%= new Date(webhook.createdAt).toLocaleString() %></td>
                </tr>
                <tr>
                  <th>Updated</th>
                  <td><%= new Date(webhook.updatedAt).toLocaleString() %></td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-bell me-2"></i>Subscribed Events</h3>
            </div>
            <div class="card-body">
              <% (webhook.events || []).forEach(function(event) { %>
                <span class="badge bg-secondary me-2 mb-2"><%= event %></span>
              <% }); %>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-redo me-2"></i>Retry Policy</h3>
            </div>
            <div class="card-body">
              <table class="table table-borderless table-sm">
                <tr>
                  <th>Max Retries</th>
                  <td><%= webhook.retryPolicy.maxRetries %></td>
                </tr>
                <tr>
                  <th>Initial Delay</th>
                  <td><%= webhook.retryPolicy.retryDelayMs %>ms</td>
                </tr>
                <tr>
                  <th>Backoff Multiplier</th>
                  <td><%= webhook.retryPolicy.backoffMultiplier %>x</td>
                </tr>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Actions -->
      <div class="row mb-3">
        <div class="col-12">
          <button class="btn btn-<%= webhook.isActive ? 'warning' : 'success' %>" onclick="toggleActive()">
            <i class="fas fa-<%= webhook.isActive ? 'pause' : 'play' %> me-2"></i>
            <%= webhook.isActive ? 'Deactivate' : 'Activate' %>
          </button>
          <button class="btn btn-outline-primary" onclick="regenerateSecret()">
            <i class="fas fa-key me-2"></i>Regenerate Secret
          </button>
          <button class="btn btn-outline-danger" onclick="deleteWebhook()">
            <i class="fas fa-trash me-2"></i>Delete Webhook
          </button>
        </div>
      </div>

      <!-- Recent Deliveries -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-paper-plane me-2"></i>Recent Deliveries</h3>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Event</th>
                    <th>Status</th>
                    <th>Attempts</th>
                    <th>Response</th>
                    <th>Duration</th>
                    <th>Created</th>
                  </tr>
                </thead>
                <tbody>
                  <% (deliveries || []).forEach(function(delivery) { %>
                  <tr>
                    <td><span class="badge bg-secondary"><%= delivery.eventType %></span></td>
                    <td>
                      <span class="badge bg-<%= delivery.status === 'success' ? 'success' : delivery.status === 'failed' ? 'danger' : delivery.status === 'retrying' ? 'warning' : 'secondary' %>">
                        <%= delivery.status %>
                      </span>
                    </td>
                    <td><%= delivery.attempts %></td>
                    <td>
                      <% if (delivery.responseStatus) { %>
                        <span class="badge bg-<%= delivery.responseStatus >= 200 && delivery.responseStatus < 300 ? 'success' : 'danger' %>">
                          <%= delivery.responseStatus %>
                        </span>
                      <% } else if (delivery.errorMessage) { %>
                        <span class="text-danger" title="<%= delivery.errorMessage %>">
                          <i class="fas fa-exclamation-circle"></i> Error
                        </span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td><%= delivery.duration ? delivery.duration + 'ms' : '-' %></td>
                    <td><%= new Date(delivery.createdAt).toLocaleString() %></td>
                  </tr>
                  <% }); %>
                  <% if ((deliveries || []).length === 0) { %>
                  <tr>
                    <td colspan="6" class="text-center text-muted">No deliveries yet</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Back Button -->
      <div class="row">
        <div class="col-12">
          <a href="/hub/platform/webhooks" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Webhooks
          </a>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  function toggleSecret() {
    const secret = document.getElementById('webhookSecret');
    const mask = document.getElementById('secretMask');
    if (secret.style.display === 'none') {
      secret.style.display = 'inline';
      mask.style.display = 'none';
    } else {
      secret.style.display = 'none';
      mask.style.display = 'inline';
    }
  }

  function copySecret() {
    const secret = '<%= webhook.secret %>';
    navigator.clipboard.writeText(secret).then(() => {
      alert('Secret copied to clipboard');
    });
  }

  async function toggleActive() {
    try {
      const response = await fetch('/hub/platform/webhooks/<%= webhook.webhookEndpointId %>', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ isActive: <%= !webhook.isActive %> })
      });
      const result = await response.json();
      if (result.success) {
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }

  async function regenerateSecret() {
    if (!confirm('Are you sure you want to regenerate the secret? You will need to update your endpoint.')) return;
    alert('Secret regeneration not yet implemented');
  }

  async function deleteWebhook() {
    if (!confirm('Are you sure you want to delete this webhook?')) return;

    try {
      const response = await fetch('/hub/platform/webhooks/<%= webhook.webhookEndpointId %>', { method: 'DELETE' });
      const result = await response.json();
      if (result.success) {
        window.location.href = '/hub/platform/webhooks';
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }
</script>

<%- include('../partials/footer') %>
