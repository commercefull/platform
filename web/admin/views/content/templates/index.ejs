<%- include('../../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-file-code me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/content/pages">Content</a></li>
            <li class="breadcrumb-item active">Templates</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title"><i class="fas fa-list me-2"></i>Page Templates</h3>
          <button class="btn btn-sm btn-success float-end" data-bs-toggle="modal" data-bs-target="#addTemplateModal">
            <i class="fas fa-plus me-1"></i>Add Template
          </button>
        </div>
        <div class="card-body">
          <div class="row">
            <% (templates || []).forEach(function(template) { %>
            <div class="col-md-4 mb-3">
              <div class="card h-100">
                <div class="card-header">
                  <h5 class="mb-0"><%= template.name %></h5>
                </div>
                <div class="card-body">
                  <p class="text-muted"><%= template.description || 'No description' %></p>
                  <div class="mb-2">
                    <span class="badge bg-secondary"><%= template.templateType || 'page' %></span>
                    <span class="badge bg-info"><%= template.pageCount || 0 %> pages</span>
                  </div>
                  <code class="small"><%= template.identifier %></code>
                </div>
                <div class="card-footer">
                  <a href="/admin/content/templates/<%= template.contentTemplateId %>/edit" class="btn btn-sm btn-outline-primary">
                    <i class="fas fa-edit"></i> Edit
                  </a>
                  <button class="btn btn-sm btn-outline-info" onclick="previewTemplate('<%= template.contentTemplateId %>')">
                    <i class="fas fa-eye"></i> Preview
                  </button>
                  <button class="btn btn-sm btn-outline-danger" onclick="deleteTemplate('<%= template.contentTemplateId %>')">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </div>
            </div>
            <% }); %>
            <% if ((templates || []).length === 0) { %>
            <div class="col-12 text-center text-muted py-4">
              <i class="fas fa-file-code fa-3x mb-3 d-block"></i>
              No templates yet. Create your first template.
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Add Template Modal -->
<div class="modal fade" id="addTemplateModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Page Template</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form method="POST" action="/admin/content/templates">
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Template Name <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="name" required>
              </div>
            </div>
            <div class="col-md-6">
              <div class="mb-3">
                <label class="form-label">Identifier <span class="text-danger">*</span></label>
                <input type="text" class="form-control" name="identifier" required placeholder="e.g., landing-page">
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label class="form-label">Template Type</label>
            <select class="form-select" name="templateType">
              <option value="page">Page</option>
              <option value="blog">Blog Post</option>
              <option value="product">Product</option>
              <option value="category">Category</option>
              <option value="email">Email</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="description" rows="2"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Template Content (HTML/EJS)</label>
            <textarea class="form-control font-monospace" name="content" rows="10" placeholder="<div class='container'>&#10;  <%- content %>&#10;</div>"></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Create Template</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  function previewTemplate(id) {
    window.open(`/admin/content/templates/${id}/preview`, '_blank');
  }
  async function deleteTemplate(id) {
    if (!confirm('Delete this template?')) return;
    const res = await fetch(`/admin/content/templates/${id}`, { method: 'DELETE' });
    if ((await res.json()).success) location.reload();
  }
</script>

<%- include('../../partials/footer') %>
