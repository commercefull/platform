<%- include('../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-plug me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/hub">Dashboard</a></li>
            <li class="breadcrumb-item active">Webhooks</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Create Webhook Button -->
      <div class="row mb-3">
        <div class="col-12">
          <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createWebhookModal">
            <i class="fas fa-plus me-2"></i>Create Webhook
          </button>
        </div>
      </div>

      <!-- Webhooks List -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-list me-2"></i>Webhook Endpoints</h3>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>URL</th>
                    <th>Events</th>
                    <th>Status</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% (webhooks || []).forEach(function(webhook) { %>
                  <tr>
                    <td><%= webhook.name %></td>
                    <td><code><%= webhook.url.substring(0, 50) %><%= webhook.url.length > 50 ? '...' : '' %></code></td>
                    <td>
                      <% (webhook.events || []).slice(0, 2).forEach(function(event) { %>
                        <span class="badge bg-secondary me-1"><%= event %></span>
                      <% }); %>
                      <% if ((webhook.events || []).length > 2) { %>
                        <span class="badge bg-light text-dark">+<%= webhook.events.length - 2 %> more</span>
                      <% } %>
                    </td>
                    <td>
                      <span class="badge bg-<%= webhook.isActive ? 'success' : 'secondary' %>">
                        <%= webhook.isActive ? 'Active' : 'Inactive' %>
                      </span>
                    </td>
                    <td><%= new Date(webhook.createdAt).toLocaleDateString() %></td>
                    <td>
                      <a href="/hub/platform/webhooks/<%= webhook.webhookEndpointId %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i>
                      </a>
                      <button class="btn btn-sm btn-outline-danger" onclick="deleteWebhook('<%= webhook.webhookEndpointId %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                  <% if ((webhooks || []).length === 0) { %>
                  <tr>
                    <td colspan="6" class="text-center text-muted">No webhooks configured</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Available Events Reference -->
      <div class="row">
        <div class="col-12">
          <div class="card collapsed-card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-info-circle me-2"></i>Available Events</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>
            <div class="card-body">
              <div class="row">
                <% (availableEvents || []).forEach(function(event) { %>
                <div class="col-md-3 col-sm-6 mb-2">
                  <code><%= event %></code>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Create Webhook Modal -->
<div class="modal fade" id="createWebhookModal" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Webhook Endpoint</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="createWebhookForm">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="name" required placeholder="My Webhook">
          </div>
          <div class="mb-3">
            <label class="form-label">Endpoint URL</label>
            <input type="url" class="form-control" name="url" required placeholder="https://example.com/webhook">
          </div>
          <div class="mb-3">
            <label class="form-label">Events</label>
            <div class="row" style="max-height: 200px; overflow-y: auto;">
              <% (availableEvents || []).forEach(function(event) { %>
              <div class="col-md-6">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="events" value="<%= event %>" id="event_<%= event.replace(/\./g, '_') %>">
                  <label class="form-check-label" for="event_<%= event.replace(/\./g, '_') %>">
                    <%= event %>
                  </label>
                </div>
              </div>
              <% }); %>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="createWebhook()">Create Webhook</button>
      </div>
    </div>
  </div>
</div>

<script>
  async function createWebhook() {
    const form = document.getElementById('createWebhookForm');
    const formData = new FormData(form);
    
    const data = {
      name: formData.get('name'),
      url: formData.get('url'),
      events: formData.getAll('events')
    };

    if (data.events.length === 0) {
      alert('Please select at least one event');
      return;
    }

    try {
      const response = await fetch('/hub/platform/webhooks', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await response.json();
      if (result.success) {
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }

  async function deleteWebhook(webhookId) {
    if (!confirm('Are you sure you want to delete this webhook?')) return;

    try {
      const response = await fetch(`/hub/platform/webhooks/${webhookId}`, { method: 'DELETE' });
      const result = await response.json();
      if (result.success) {
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }
</script>

<%- include('../partials/footer') %>
