<%- include('../../layout') %>

<% content %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Shipping Rates</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/shipping">Shipping</a></li>
            <li class="breadcrumb-item active">Rates</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <i class="icon fas fa-check"></i> <%= success %>
        </div>
      <% } %>

      <!-- Action Bar -->
      <div class="row mb-3">
        <div class="col-12">
          <a href="/admin/shipping/rates/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Rate
          </a>
          <div class="float-right">
            <span class="badge badge-info">Total: <%= rates.length %></span>
          </div>
        </div>
      </div>

      <!-- Filters -->
      <div class="row mb-3">
        <div class="col-md-12">
          <div class="card">
            <div class="card-body">
              <form method="GET" class="form-inline">
                <div class="form-group mr-3">
                  <label for="zoneId" class="mr-2">Zone:</label>
                  <select name="zoneId" id="zoneId" class="form-control">
                    <option value="">All Zones</option>
                    <% zones.forEach(zone => { %>
                      <option value="<%= zone.shippingZoneId %>" <%= filters.zoneId === zone.shippingZoneId ? 'selected' : '' %>>
                        <%= zone.name %>
                      </option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group mr-3">
                  <label for="methodId" class="mr-2">Method:</label>
                  <select name="methodId" id="methodId" class="form-control">
                    <option value="">All Methods</option>
                    <% methods.forEach(method => { %>
                      <option value="<%= method.shippingMethodId %>" <%= filters.methodId === method.shippingMethodId ? 'selected' : '' %>>
                        <%= method.name %>
                      </option>
                    <% }); %>
                  </select>
                </div>
                <button type="submit" class="btn btn-secondary mr-2">
                  <i class="fas fa-filter"></i> Filter
                </button>
                <a href="/admin/shipping/rates" class="btn btn-outline-secondary">
                  <i class="fas fa-times"></i> Clear
                </a>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Rates Table -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Shipping Rates</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>Name</th>
                <th>Zone</th>
                <th>Method</th>
                <th>Type</th>
                <th>Base Rate</th>
                <th>Free Threshold</th>
                <th>Status</th>
                <th>Priority</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (rates.length === 0) { %>
                <tr>
                  <td colspan="9" class="text-center py-4">
                    <em>No shipping rates found. <a href="/admin/shipping/rates/create">Create your first rate</a>.</em>
                  </td>
                </tr>
              <% } else { %>
                <% rates.forEach(rate => { %>
                  <tr>
                    <td>
                      <strong><%= rate.name || 'Unnamed Rate' %></strong>
                      <% if (rate.description) { %>
                        <br><small class="text-muted"><%= rate.description %></small>
                      <% } %>
                    </td>
                    <td>
                      <% const zone = zones.find(z => z.shippingZoneId === rate.shippingZoneId); %>
                      <%= zone ? zone.name : 'Unknown Zone' %>
                    </td>
                    <td>
                      <% const method = methods.find(m => m.shippingMethodId === rate.shippingMethodId); %>
                      <%= method ? method.name : 'Unknown Method' %>
                    </td>
                    <td>
                      <span class="badge badge-secondary"><%= rate.rateType %></span>
                    </td>
                    <td>
                      <%= rate.currency %> <%= parseFloat(rate.baseRate).toFixed(2) %>
                      <% if (rate.perItemRate && rate.perItemRate !== '0') { %>
                        <br><small class="text-muted">+ <%= rate.currency %> <%= parseFloat(rate.perItemRate).toFixed(2) %>/item</small>
                      <% } %>
                    </td>
                    <td>
                      <% if (rate.freeThreshold) { %>
                        <%= rate.currency %> <%= parseFloat(rate.freeThreshold).toFixed(2) %>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (rate.isActive) { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-secondary">Inactive</span>
                      <% } %>
                    </td>
                    <td><%= rate.priority %></td>
                    <td>
                      <a href="/admin/shipping/rates/<%= rate.shippingRateId %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/admin/shipping/rates/<%= rate.shippingRateId %>/edit" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <% if (rate.isActive) { %>
                        <button class="btn btn-sm btn-warning" onclick="deactivateRate('<%= rate.shippingRateId %>')">
                          <i class="fas fa-pause"></i>
                        </button>
                      <% } else { %>
                        <button class="btn btn-sm btn-success" onclick="activateRate('<%= rate.shippingRateId %>')">
                          <i class="fas fa-play"></i>
                        </button>
                      <% } %>
                      <button class="btn btn-sm btn-danger" onclick="deleteRate('<%= rate.shippingRateId %>', '<%= rate.name || \'Shipping Rate\' %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete Shipping Rate</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the shipping rate "<strong id="deleteRateName"></strong>"?</p>
        <p class="text-danger"><small>This action cannot be undone.</small></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Rate</button>
      </div>
    </div>
  </div>
</div>

<script>
function activateRate(rateId) {
  fetch(`/admin/shipping/rates/${rateId}/activate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error activating shipping rate');
    console.error('Error:', error);
  });
}

function deactivateRate(rateId) {
  fetch(`/admin/shipping/rates/${rateId}/deactivate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error deactivating shipping rate');
    console.error('Error:', error);
  });
}

function deleteRate(rateId, rateName) {
  document.getElementById('deleteRateName').textContent = rateName;
  document.getElementById('confirmDeleteBtn').onclick = function() {
    fetch(`/admin/shipping/rates/${rateId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        location.reload();
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      alert('Error deleting shipping rate');
      console.error('Error:', error);
    });
  };
  $('#deleteModal').modal('show');
}
</script>
<% endcontent %>
