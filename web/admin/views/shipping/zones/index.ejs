<%- include('../../layout') %>

<% content %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Shipping Zones</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/shipping">Shipping</a></li>
            <li class="breadcrumb-item active">Zones</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <i class="icon fas fa-check"></i> <%= success %>
        </div>
      <% } %>

      <!-- Action Bar -->
      <div class="row mb-3">
        <div class="col-12">
          <a href="/admin/shipping/zones/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Zone
          </a>
          <div class="float-right">
            <span class="badge badge-info">Total: <%= stats.total %></span>
            <span class="badge badge-success ml-2">Active: <%= stats.active %></span>
          </div>
        </div>
      </div>

      <!-- Zones Table -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Shipping Zones</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Locations</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (zones.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center py-4">
                    <em>No shipping zones found. <a href="/admin/shipping/zones/create">Create your first zone</a>.</em>
                  </td>
                </tr>
              <% } else { %>
                <% zones.forEach(zone => { %>
                  <tr>
                    <td>
                      <strong><%= zone.name %></strong>
                      <% if (zone.description) { %>
                        <br><small class="text-muted"><%= zone.description %></small>
                      <% } %>
                    </td>
                    <td>
                      <span class="badge badge-secondary"><%= zone.locationType %></span>
                    </td>
                    <td>
                      <% if (zone.locations && zone.locations.length > 0) { %>
                        <%= zone.locations.length %> location<%= zone.locations.length > 1 ? 's' : '' %>
                        <% if (zone.excludedLocations && zone.excludedLocations.length > 0) { %>
                          <br><small class="text-muted"><%= zone.excludedLocations.length %> excluded</small>
                        <% } %>
                      <% } else { %>
                        <span class="text-muted">No locations</span>
                      <% } %>
                    </td>
                    <td><%= zone.priority %></td>
                    <td>
                      <% if (zone.isActive) { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-secondary">Inactive</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/shipping/zones/<%= zone.shippingZoneId %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/admin/shipping/zones/<%= zone.shippingZoneId %>/edit" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <% if (zone.isActive) { %>
                        <button class="btn btn-sm btn-warning" onclick="deactivateZone('<%= zone.shippingZoneId %>')">
                          <i class="fas fa-pause"></i>
                        </button>
                      <% } else { %>
                        <button class="btn btn-sm btn-success" onclick="activateZone('<%= zone.shippingZoneId %>')">
                          <i class="fas fa-play"></i>
                        </button>
                      <% } %>
                      <button class="btn btn-sm btn-danger" onclick="deleteZone('<%= zone.shippingZoneId %>', '<%= zone.name %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete Shipping Zone</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the shipping zone "<strong id="deleteZoneName"></strong>"?</p>
        <p class="text-danger"><small>This action will also delete all associated shipping rates and cannot be undone.</small></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Zone</button>
      </div>
    </div>
  </div>
</div>

<script>
function activateZone(zoneId) {
  fetch(`/admin/shipping/zones/${zoneId}/activate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error activating shipping zone');
    console.error('Error:', error);
  });
}

function deactivateZone(zoneId) {
  fetch(`/admin/shipping/zones/${zoneId}/deactivate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error deactivating shipping zone');
    console.error('Error:', error);
  });
}

function deleteZone(zoneId, zoneName) {
  document.getElementById('deleteZoneName').textContent = zoneName;
  document.getElementById('confirmDeleteBtn').onclick = function() {
    fetch(`/admin/shipping/zones/${zoneId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        location.reload();
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      alert('Error deleting shipping zone');
      console.error('Error:', error);
    });
  };
  $('#deleteModal').modal('show');
}
</script>
<% endcontent %>
