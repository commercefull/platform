<%- include('../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-robot me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/hub/analytics">Analytics</a></li>
            <li class="breadcrumb-item active">AI Recommendations</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Product Recommendations -->
      <div class="row">
        <div class="col-lg-4">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-user me-2"></i>Personalized Recommendations</h3>
            </div>
            <div class="card-body p-0">
              <ul class="list-group list-group-flush">
                <% (productRecommendations.personalized || []).slice(0, 5).forEach(function(rec) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong>Product <%= rec.productId.slice(-8) %></strong>
                    <br><small class="text-muted"><%= rec.reason %></small>
                  </div>
                  <span class="badge bg-primary rounded-pill"><%= (rec.score * 100).toFixed(0) %>%</span>
                </li>
                <% }); %>
                <% if ((productRecommendations.personalized || []).length === 0) { %>
                <li class="list-group-item text-muted text-center">No personalized recommendations available</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card card-success">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-fire me-2"></i>Trending Products</h3>
            </div>
            <div class="card-body p-0">
              <ul class="list-group list-group-flush">
                <% (productRecommendations.trending || []).slice(0, 5).forEach(function(product) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong>Product <%= product.productId.slice(-8) %></strong>
                    <br><small class="text-muted"><%= product.category %></small>
                  </div>
                  <span class="badge bg-success rounded-pill"><i class="fas fa-arrow-up me-1"></i><%= product.trend %></span>
                </li>
                <% }); %>
                <% if ((productRecommendations.trending || []).length === 0) { %>
                <li class="list-group-item text-muted text-center">No trending products available</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card card-warning">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-link me-2"></i>Complementary Products</h3>
            </div>
            <div class="card-body p-0">
              <ul class="list-group list-group-flush">
                <% (productRecommendations.complementary || []).slice(0, 5).forEach(function(product) { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div>
                    <strong>Product <%= product.productId.slice(-8) %></strong>
                    <br><small class="text-muted">Pairs with <%= product.baseProductId.slice(-8) %></small>
                  </div>
                  <span class="badge bg-warning text-dark rounded-pill">Lift: <%= product.lift %></span>
                </li>
                <% }); %>
                <% if ((productRecommendations.complementary || []).length === 0) { %>
                <li class="list-group-item text-muted text-center">No complementary products available</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      </div>

      <!-- Campaign Suggestions -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-bullhorn me-2"></i>AI-Generated Campaign Suggestions</h3>
            </div>
            <div class="card-body">
              <div class="row">
                <% (personalizedCampaigns.suggestions || []).forEach(function(campaign) { %>
                <div class="col-md-6">
                  <div class="card card-outline card-info">
                    <div class="card-header">
                      <h5 class="card-title"><%= campaign.name %></h5>
                    </div>
                    <div class="card-body">
                      <p><strong>Target Audience:</strong> <%= campaign.targetAudience %></p>
                      <div class="row">
                        <div class="col-6">
                          <div class="info-box bg-light mb-0">
                            <span class="info-box-icon bg-success"><i class="fas fa-chart-line"></i></span>
                            <div class="info-box-content">
                              <span class="info-box-text">Expected ROI</span>
                              <span class="info-box-number"><%= (campaign.expectedROI * 100).toFixed(0) %>%</span>
                            </div>
                          </div>
                        </div>
                        <div class="col-6">
                          <div class="info-box bg-light mb-0">
                            <span class="info-box-icon bg-info"><i class="fas fa-percentage"></i></span>
                            <div class="info-box-content">
                              <span class="info-box-text">Confidence</span>
                              <span class="info-box-number"><%= (campaign.confidence * 100).toFixed(0) %>%</span>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="card-footer">
                      <button class="btn btn-primary btn-sm"><i class="fas fa-play me-1"></i>Launch Campaign</button>
                      <button class="btn btn-outline-secondary btn-sm"><i class="fas fa-edit me-1"></i>Customize</button>
                    </div>
                  </div>
                </div>
                <% }); %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Cross-sell Opportunities -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-shopping-cart me-2"></i>Cross-sell Opportunities</h3>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Product</th>
                    <th>Base Product</th>
                    <th>Confidence</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% (crossSellOpportunities.accessoryRecommendations || []).forEach(function(rec) { %>
                  <tr>
                    <td><%= rec.productId.slice(-8) %></td>
                    <td><%= rec.baseProductId.slice(-8) %></td>
                    <td>
                      <div class="progress" style="height: 20px; width: 100px;">
                        <div class="progress-bar bg-success" style="width: <%= (rec.confidence * 100).toFixed(0) %>%">
                          <%= (rec.confidence * 100).toFixed(0) %>%
                        </div>
                      </div>
                    </td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary"><i class="fas fa-plus me-1"></i>Create Bundle</button>
                    </td>
                  </tr>
                  <% }); %>
                  <% if ((crossSellOpportunities.accessoryRecommendations || []).length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center text-muted">No cross-sell opportunities identified yet</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('../partials/footer') %>
