<%- include('../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-file-alt me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/hub/analytics">Analytics</a></li>
            <li class="breadcrumb-item active">Reports</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Quick Report Generation -->
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-play me-2"></i>Generate Report Now</h3>
            </div>
            <div class="card-body">
              <form id="generateReportForm">
                <div class="row">
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Report Type</label>
                      <select class="form-control" name="reportType" required>
                        <option value="sales">Sales Report</option>
                        <option value="customers">Customer Report</option>
                        <option value="products">Product Report</option>
                        <option value="inventory">Inventory Report</option>
                        <option value="executive">Executive Summary</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Period</label>
                      <select class="form-control" name="period">
                        <option value="7d">Last 7 Days</option>
                        <option value="30d" selected>Last 30 Days</option>
                        <option value="90d">Last 90 Days</option>
                        <option value="1y">Last Year</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>Format</label>
                      <select class="form-control" name="format">
                        <option value="html">HTML (View)</option>
                        <option value="pdf">PDF</option>
                        <option value="excel">Excel</option>
                        <option value="csv">CSV</option>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-3">
                    <div class="form-group">
                      <label>&nbsp;</label>
                      <button type="submit" class="btn btn-primary btn-block w-100">
                        <i class="fas fa-file-download me-2"></i>Generate
                      </button>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Scheduled Reports -->
      <div class="row">
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-clock me-2"></i>Scheduled Reports</h3>
              <div class="card-tools">
                <button type="button" class="btn btn-tool" data-bs-toggle="modal" data-bs-target="#newScheduleModal">
                  <i class="fas fa-plus"></i>
                </button>
              </div>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Frequency</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% (reports || []).forEach(function(report) { %>
                  <tr>
                    <td><%= report.name %></td>
                    <td><%= report.reportType %></td>
                    <td><%= report.type %></td>
                    <td>
                      <span class="badge bg-<%= report.isActive ? 'success' : 'secondary' %>">
                        <%= report.isActive ? 'Active' : 'Paused' %>
                      </span>
                    </td>
                    <td>
                      <button class="btn btn-sm btn-outline-primary"><i class="fas fa-play"></i></button>
                      <button class="btn btn-sm btn-outline-secondary"><i class="fas fa-edit"></i></button>
                      <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                    </td>
                  </tr>
                  <% }); %>
                  <% if ((reports || []).length === 0) { %>
                  <tr>
                    <td colspan="5" class="text-center text-muted">
                      No scheduled reports. Click + to create one.
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-history me-2"></i>Report History</h3>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Report</th>
                    <th>Generated</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% (reportHistory || []).forEach(function(execution) { %>
                  <tr>
                    <td><%= execution.reportScheduleId.slice(-8) %></td>
                    <td><%= new Date(execution.startedAt).toLocaleString() %></td>
                    <td>
                      <span class="badge bg-<%= execution.status === 'completed' ? 'success' : execution.status === 'failed' ? 'danger' : 'warning' %>">
                        <%= execution.status %>
                      </span>
                    </td>
                    <td>
                      <% if (execution.fileUrl) { %>
                      <a href="<%= execution.fileUrl %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-download"></i>
                      </a>
                      <% } %>
                    </td>
                  </tr>
                  <% }); %>
                  <% if ((reportHistory || []).length === 0) { %>
                  <tr>
                    <td colspan="4" class="text-center text-muted">
                      No report history available.
                    </td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <!-- Report Templates -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-file-invoice me-2"></i>Report Templates</h3>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-3">
                  <div class="card card-outline card-primary">
                    <div class="card-body text-center">
                      <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                      <h5>Sales Report</h5>
                      <p class="text-muted small">Revenue, orders, and sales trends</p>
                      <button class="btn btn-primary btn-sm" onclick="generateReport('sales')">Generate</button>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card card-outline card-success">
                    <div class="card-body text-center">
                      <i class="fas fa-users fa-3x text-success mb-3"></i>
                      <h5>Customer Report</h5>
                      <p class="text-muted small">Acquisition, retention, and segments</p>
                      <button class="btn btn-success btn-sm" onclick="generateReport('customers')">Generate</button>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card card-outline card-warning">
                    <div class="card-body text-center">
                      <i class="fas fa-box fa-3x text-warning mb-3"></i>
                      <h5>Product Report</h5>
                      <p class="text-muted small">Performance, inventory, and trends</p>
                      <button class="btn btn-warning btn-sm" onclick="generateReport('products')">Generate</button>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card card-outline card-danger">
                    <div class="card-body text-center">
                      <i class="fas fa-briefcase fa-3x text-danger mb-3"></i>
                      <h5>Executive Summary</h5>
                      <p class="text-muted small">High-level KPIs and insights</p>
                      <button class="btn btn-danger btn-sm" onclick="generateReport('executive')">Generate</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- New Schedule Modal -->
<div class="modal fade" id="newScheduleModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Create Scheduled Report</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="scheduleForm">
          <div class="mb-3">
            <label class="form-label">Report Name</label>
            <input type="text" class="form-control" name="name" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Report Type</label>
            <select class="form-control" name="reportType" required>
              <option value="sales">Sales Report</option>
              <option value="customers">Customer Report</option>
              <option value="products">Product Report</option>
              <option value="inventory">Inventory Report</option>
              <option value="executive">Executive Summary</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Frequency</label>
            <select class="form-control" name="type" required>
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
              <option value="monthly">Monthly</option>
              <option value="quarterly">Quarterly</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Recipients (comma-separated emails)</label>
            <input type="text" class="form-control" name="recipients" placeholder="email@example.com">
          </div>
          <div class="mb-3">
            <label class="form-label">Format</label>
            <select class="form-control" name="format">
              <option value="pdf">PDF</option>
              <option value="excel">Excel</option>
              <option value="csv">CSV</option>
              <option value="html">HTML</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="createSchedule()">Create Schedule</button>
      </div>
    </div>
  </div>
</div>

<script>
  function generateReport(type) {
    const form = document.getElementById('generateReportForm');
    form.querySelector('[name="reportType"]').value = type;
    form.dispatchEvent(new Event('submit'));
  }

  document.getElementById('generateReportForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    try {
      const response = await fetch('/hub/analytics/reports/run-now', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await response.json();
      if (result.success) {
        alert('Report generated successfully!');
        console.log(result.report);
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error generating report: ' + error.message);
    }
  });

  async function createSchedule() {
    const form = document.getElementById('scheduleForm');
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);
    data.recipients = data.recipients.split(',').map(e => e.trim()).filter(e => e);
    
    try {
      const response = await fetch('/hub/analytics/reports/schedules', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await response.json();
      if (result.success) {
        alert('Schedule created successfully!');
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error creating schedule: ' + error.message);
    }
  }
</script>

<%- include('../partials/footer') %>
