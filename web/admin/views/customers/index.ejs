<!-- Page Header -->
<div class="page-header d-print-none">
  <div class="row g-2 align-items-center">
    <div class="col">
      <h2 class="page-title">
        <%= pageName %>
      </h2>
    </div>
  </div>
</div>

<!-- Main content -->
<section class="content">
  <div class="container-fluid">
    <%- include("../partials/alerts") %>

    <!-- Filters -->
    <div class="card">
      <div class="card-header">
        <div class="row align-items-center">
          <div class="col">
            <h3 class="card-title mb-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-2">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M4 6h16"/>
                <path d="M4 12h16"/>
                <path d="M4 18h12"/>
              </svg>
              Filters
            </h3>
          </div>
          <div class="col-auto">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="toggleFilters">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M12 3c.132 0 .263 0 .393 0a7.5 7.5 0 0 0 7.92 12.446a9 9 0 1 1 -8.313 -12.454z"/>
              </svg>
              Toggle Filters
            </button>
          </div>
        </div>
      </div>
      <div class="card-body" id="filtersBody">
        <form method="GET" class="row g-3">
          <!-- Search -->
          <div class="col-md-6 col-lg-4">
            <label class="form-label" for="search">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                <path d="M21 21l-6 -6"/>
              </svg>
              Search
            </label>
            <input type="text" class="form-control" id="search" name="search" value="<%= filters.search %>" placeholder="Name, Email, Phone...">
          </div>

          <!-- Status -->
          <div class="col-md-6 col-lg-2">
            <label class="form-label" for="status">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M9 12l2 2l4 -4"/>
              </svg>
              Status
            </label>
            <select class="form-select" id="status" name="status">
              <option value="">All Status</option>
              <option value="active" <%= filters.status === 'active' ? 'selected' : '' %>>Active</option>
              <option value="inactive" <%= filters.status === 'inactive' ? 'selected' : '' %>>Inactive</option>
            </select>
          </div>

          <!-- Verification Status -->
          <div class="col-md-6 col-lg-2">
            <label class="form-label" for="verified">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M9 12l2 2l4 -4"/>
              </svg>
              Verified
            </label>
            <select class="form-select" id="verified" name="verified">
              <option value="">All</option>
              <option value="verified" <%= filters.verified === 'verified' ? 'selected' : '' %>>Verified</option>
              <option value="unverified" <%= filters.verified === 'unverified' ? 'selected' : '' %>>Unverified</option>
            </select>
          </div>

          <!-- Sort By -->
          <div class="col-md-6 col-lg-2">
            <label class="form-label" for="orderBy">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M3 8h4l4 -4l4 4h4"/>
                <path d="M7 12h10"/>
                <path d="M7 16h10"/>
              </svg>
              Sort By
            </label>
            <select class="form-select" id="orderBy" name="orderBy">
              <option value="createdAt" <%= filters.orderBy === 'createdAt' ? 'selected' : '' %>>Date Registered</option>
              <option value="lastName" <%= filters.orderBy === 'lastName' ? 'selected' : '' %>>Last Name</option>
              <option value="firstName" <%= filters.orderBy === 'firstName' ? 'selected' : '' %>>First Name</option>
              <option value="email" <%= filters.orderBy === 'email' ? 'selected' : '' %>>Email</option>
              <option value="lastLoginAt" <%= filters.orderBy === 'lastLoginAt' ? 'selected' : '' %>>Last Login</option>
            </select>
          </div>

          <!-- Date Range -->
          <div class="col-md-6 col-lg-2">
            <label class="form-label" for="dateRange">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                <path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"/>
                <path d="M16 3v4"/>
                <path d="M8 3v4"/>
                <path d="M4 11h16"/>
                <path d="M11 15h1"/>
                <path d="M12 15v3"/>
              </svg>
              Registered
            </label>
            <select class="form-select" id="dateRange" name="dateRange">
              <option value="">All Time</option>
              <option value="today" <%= filters.dateRange === 'today' ? 'selected' : '' %>>Today</option>
              <option value="week" <%= filters.dateRange === 'week' ? 'selected' : '' %>>This Week</option>
              <option value="month" <%= filters.dateRange === 'month' ? 'selected' : '' %>>This Month</option>
              <option value="quarter" <%= filters.dateRange === 'quarter' ? 'selected' : '' %>>This Quarter</option>
              <option value="year" <%= filters.dateRange === 'year' ? 'selected' : '' %>>This Year</option>
            </select>
          </div>

          <!-- Actions -->
          <div class="col-12">
            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"/>
                  <path d="M21 21l-6 -6"/>
                </svg>
                Apply Filters
              </button>
              <a href="/admin/customers" class="btn btn-outline-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" class="icon me-1">
                  <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                  <path d="M19 19h-11l-4 -4a2 2 0 0 1 0 -2.828l4 -4h11a2 2 0 0 0 2 -2v-3a2 2 0 0 0 -2 -2h-3l-3 -3"/>
                  <path d="M3 3l18 18"/>
                </svg>
                Clear All
              </a>
              <% if (filters.search || filters.status || filters.verified || filters.dateRange) { %>
                <div class="ms-auto">
                  <span class="badge bg-info">
                    <%= [filters.search && 'Search', filters.status && 'Status', filters.verified && 'Verification', filters.dateRange && 'Date'].filter(Boolean).join(' + ') %> filters active
                  </span>
                </div>
              <% } %>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Customers Table -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Customers (<%= pagination.total %>)</h3>
      </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
          <thead>
            <tr>
              <th>Customer</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Status</th>
              <th>Verified</th>
              <th>Registered</th>
              <th>Last Login</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% customers.forEach(customer => { %>
            <tr>
              <td>
                <a href="/admin/customers/<%= customer.customerId %>">
                  <strong><%= customer.firstName %> <%= customer.lastName %></strong>
                </a>
              </td>
              <td><%= customer.email %></td>
              <td><%= customer.phone || '-' %></td>
              <td>
                <span class="badge badge-<%= customer.isActive ? 'success' : 'secondary' %>">
                  <%= customer.isActive ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td>
                <% if (customer.isVerified) { %>
                  <i class="fas fa-check-circle text-success" title="Verified"></i>
                <% } else { %>
                  <i class="fas fa-times-circle text-muted" title="Not Verified"></i>
                <% } %>
              </td>
              <td><%= new Date(customer.createdAt).toLocaleDateString() %></td>
              <td>
                <% if (customer.lastLoginAt) { %>
                  <%= new Date(customer.lastLoginAt).toLocaleDateString() %>
                <% } else { %>
                  Never
                <% } %>
              </td>
              <td>
                <div class="btn-group">
                  <a href="/admin/customers/<%= customer.customerId %>" class="btn btn-sm btn-info" title="View">
                    <i class="fas fa-eye"></i>
                  </a>
                  <a href="/admin/customers/<%= customer.customerId %>/edit" class="btn btn-sm btn-primary" title="Edit">
                    <i class="fas fa-edit"></i>
                  </a>
                  <% if (customer.isActive) { %>
                    <button class="btn btn-sm btn-warning" onclick="deactivateCustomer('<%= customer.customerId %>')" title="Deactivate">
                      <i class="fas fa-user-slash"></i>
                    </button>
                  <% } else { %>
                    <button class="btn btn-sm btn-success" onclick="reactivateCustomer('<%= customer.customerId %>')" title="Reactivate">
                      <i class="fas fa-user-check"></i>
                    </button>
                  <% } %>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <!-- Pagination -->
      <% if (pagination.pages > 1) { %>
      <div class="card-footer">
        <nav>
          <ul class="pagination pagination-sm m-0">
            <% for (let i = 1; i <= pagination.pages; i++) { %>
              <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&search=<%= filters.search %>&status=<%= filters.status %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
        </nav>
      </div>
      <% } %>
    </div>
  </div>
</section>

<script src="/javascripts/admin/customers.js"></script>
