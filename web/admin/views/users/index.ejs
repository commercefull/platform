<%- include('../partials/header', { title: pageName }) %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0"><i class="fas fa-users-cog me-2"></i><%= pageName %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
            <li class="breadcrumb-item active">Admin Users</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <!-- Actions -->
      <div class="row mb-3">
        <div class="col-12">
          <a href="/admin/users/create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create Admin User
          </a>
          <a href="/admin/roles" class="btn btn-outline-secondary ms-2">
            <i class="fas fa-shield-alt me-2"></i>Manage Roles
          </a>
        </div>
      </div>

      <!-- Users Table -->
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3 class="card-title"><i class="fas fa-list me-2"></i>Admin Users</h3>
              <span class="float-end text-muted">Total: <%= total %></span>
            </div>
            <div class="card-body table-responsive p-0">
              <table class="table table-hover text-nowrap">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Status</th>
                    <th>Last Login</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% (users || []).forEach(function(u) { %>
                  <tr>
                    <td>
                      <strong><%= u.firstName || '' %> <%= u.lastName || '' %></strong>
                      <% if (!u.firstName && !u.lastName) { %>
                        <span class="text-muted">No name</span>
                      <% } %>
                    </td>
                    <td><%= u.email %></td>
                    <td>
                      <% if (u.roleName) { %>
                        <span class="badge bg-primary"><%= u.roleName %></span>
                      <% } else { %>
                        <span class="text-muted">No role</span>
                      <% } %>
                    </td>
                    <td>
                      <span class="badge bg-<%= u.status === 'active' ? 'success' : u.status === 'suspended' ? 'danger' : 'secondary' %>">
                        <%= u.status %>
                      </span>
                    </td>
                    <td><%= u.lastLoginAt ? new Date(u.lastLoginAt).toLocaleDateString() : 'Never' %></td>
                    <td>
                      <a href="/admin/users/<%= u.userId %>" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-eye"></i>
                      </a>
                      <button class="btn btn-sm btn-outline-danger" onclick="deleteUser('<%= u.userId %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                  <% }); %>
                  <% if ((users || []).length === 0) { %>
                  <tr>
                    <td colspan="6" class="text-center text-muted">No admin users found</td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <% if (totalPages > 1) { %>
            <div class="card-footer">
              <nav>
                <ul class="pagination justify-content-center mb-0">
                  <% for (let i = 1; i <= totalPages; i++) { %>
                  <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&status=<%= filters.status || '' %>&role=<%= filters.role || '' %>">
                      <%= i %>
                    </a>
                  </li>
                  <% } %>
                </ul>
              </nav>
            </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  async function deleteUser(userId) {
    if (!confirm('Are you sure you want to delete this user?')) return;

    try {
      const response = await fetch(`/admin/users/${userId}`, { method: 'DELETE' });
      const result = await response.json();
      if (result.success) {
        location.reload();
      } else {
        alert('Error: ' + result.message);
      }
    } catch (error) {
      alert('Error: ' + error.message);
    }
  }
</script>

<%- include('../partials/footer') %>
