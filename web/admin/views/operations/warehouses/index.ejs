<%- include('../../layout') %>

<% content %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Warehouses</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/hub">Dashboard</a></li>
            <li class="breadcrumb-item">Operations</li>
            <li class="breadcrumb-item active">Warehouses</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Success/Error Messages -->
      <% if (success) { %>
        <div class="alert alert-success alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <i class="icon fas fa-check"></i> <%= success %>
        </div>
      <% } %>

      <!-- Stats Cards -->
      <div class="row mb-4">
        <div class="col-lg-3 col-6">
          <div class="small-box bg-info">
            <div class="inner">
              <h3><%= stats.total %></h3>
              <p>Total Warehouses</p>
            </div>
            <div class="icon">
              <i class="fas fa-warehouse"></i>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <div class="small-box bg-success">
            <div class="inner">
              <h3><%= stats.active %></h3>
              <p>Active Warehouses</p>
            </div>
            <div class="icon">
              <i class="fas fa-check-circle"></i>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <div class="small-box bg-warning">
            <div class="inner">
              <h3><%= stats.fulfillmentCenters %></h3>
              <p>Fulfillment Centers</p>
            </div>
            <div class="icon">
              <i class="fas fa-shipping-fast"></i>
            </div>
          </div>
        </div>
        <div class="col-lg-3 col-6">
          <a href="/hub/warehouses/create" class="small-box bg-primary">
            <div class="inner">
              <h3>+</h3>
              <p>Add Warehouse</p>
            </div>
            <div class="icon">
              <i class="fas fa-plus"></i>
            </div>
          </a>
        </div>
      </div>

      <!-- Warehouses Table -->
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Warehouse Management</h3>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-hover text-nowrap">
            <thead>
              <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Type</th>
                <th>Location</th>
                <th>Status</th>
                <th>Default</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (warehouses.length === 0) { %>
                <tr>
                  <td colspan="7" class="text-center py-4">
                    <em>No warehouses found. <a href="/hub/warehouses/create">Create your first warehouse</a>.</em>
                  </td>
                </tr>
              <% } else { %>
                <% warehouses.forEach(warehouse => { %>
                  <tr>
                    <td>
                      <strong><code><%= warehouse.code %></code></strong>
                    </td>
                    <td>
                      <%= warehouse.name %>
                      <% if (warehouse.description) { %>
                        <br><small class="text-muted"><%= warehouse.description %></small>
                      <% } %>
                    </td>
                    <td>
                      <% if (warehouse.isVirtual) { %>
                        <span class="badge badge-info">Virtual</span>
                      <% } else { %>
                        <span class="badge badge-primary">Physical</span>
                      <% } %>
                      <% if (warehouse.isFulfillmentCenter) { %>
                        <br><small class="text-success">Fulfillment Center</small>
                      <% } %>
                      <% if (warehouse.isReturnCenter) { %>
                        <br><small class="text-warning">Return Center</small>
                      <% } %>
                    </td>
                    <td>
                      <%= warehouse.city %>, <%= warehouse.state %>
                      <br><small class="text-muted"><%= warehouse.country %></small>
                    </td>
                    <td>
                      <% if (warehouse.isActive) { %>
                        <span class="badge badge-success">Active</span>
                      <% } else { %>
                        <span class="badge badge-secondary">Inactive</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (warehouse.isDefault) { %>
                        <span class="badge badge-primary">Default</span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/hub/warehouses/<%= warehouse.distributionWarehouseId %>" class="btn btn-sm btn-info">
                        <i class="fas fa-eye"></i>
                      </a>
                      <a href="/hub/warehouses/<%= warehouse.distributionWarehouseId %>/edit" class="btn btn-sm btn-primary">
                        <i class="fas fa-edit"></i>
                      </a>
                      <% if (warehouse.isActive) { %>
                        <button class="btn btn-sm btn-warning" onclick="deactivateWarehouse('<%= warehouse.distributionWarehouseId %>')">
                          <i class="fas fa-pause"></i>
                        </button>
                      <% } else { %>
                        <button class="btn btn-sm btn-success" onclick="activateWarehouse('<%= warehouse.distributionWarehouseId %>')">
                          <i class="fas fa-play"></i>
                        </button>
                      <% } %>
                      <button class="btn btn-sm btn-danger" onclick="deleteWarehouse('<%= warehouse.distributionWarehouseId %>', '<%= warehouse.name %>')">
                        <i class="fas fa-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete Warehouse</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the warehouse "<strong id="deleteWarehouseName"></strong>"?</p>
        <p class="text-danger"><small>This action cannot be undone and may affect order fulfillment.</small></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Warehouse</button>
      </div>
    </div>
  </div>
</div>

<script>
function activateWarehouse(warehouseId) {
  fetch(`/hub/warehouses/${warehouseId}/activate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error activating warehouse');
    console.error('Error:', error);
  });
}

function deactivateWarehouse(warehouseId) {
  fetch(`/hub/warehouses/${warehouseId}/deactivate`, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    }
  })
  .then(response => response.json())
  .then(data => {
    if (data.success) {
      location.reload();
    } else {
      alert('Error: ' + data.message);
    }
  })
  .catch(error => {
    alert('Error deactivating warehouse');
    console.error('Error:', error);
  });
}

function deleteWarehouse(warehouseId, warehouseName) {
  document.getElementById('deleteWarehouseName').textContent = warehouseName;
  document.getElementById('confirmDeleteBtn').onclick = function() {
    fetch(`/hub/warehouses/${warehouseId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        location.reload();
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      alert('Error deleting warehouse');
      console.error('Error:', error);
    });
  };
  $('#deleteModal').modal('show');
}
</script>
<% endcontent %>
