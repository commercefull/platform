<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title><%= pageName %> | Admin Portal</title>

<!-- Tabler Admin Template (Bootstrap 5) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/core@1.4.0/dist/css/tabler.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons@1.119.0/iconfont/tabler-icons.min.css">

<!-- Custom styles for horizontal navbar layout -->
<style>
  body {
    overflow-x: hidden;
  }
  .page {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .navbar-vertical {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 15rem;
    z-index: 1030;
    overflow-y: auto;
    border-right: 1px solid var(--tblr-border-color);
    background-color: var(--tblr-dark);
  }
  .navbar-vertical .container-fluid {
    padding: 1rem;
  }
  .navbar-vertical .navbar-brand {
    margin: 0;
    padding: 0;
  }
  .page-wrapper {
    flex: 1;
    margin-left: 15rem;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  .page-body {
    flex: 1;
  }

  /* Mobile responsive - hide sidebar on small screens */
  @media (max-width: 991.98px) {
    .navbar-vertical {
      position: relative;
      width: 100%;
      height: auto;
      border-right: none;
      border-bottom: 1px solid var(--tblr-border-color);
    }
    .page-wrapper {
      margin-left: 0;
    }
  }
</style>
