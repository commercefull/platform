<div class="container-xl">
  <div class="page-header d-print-none">
    <div class="row align-items-center">
      <div class="col-auto">
        <h2 class="page-title"><%= pageName %></h2>
      </div>
    </div>
  </div>
  <% if (typeof success !== 'undefined' && success) { %>
  <div class="alert alert-success"><%= success %></div>
  <% } %>
  <div class="row">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Languages</h3>
        </div>
        <div class="card-body">
          <p class="text-muted">Manage supported languages.</p>
          <a href="/admin/settings/localization/languages" class="btn btn-outline-primary">Manage Languages</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Currencies</h3>
        </div>
        <div class="card-body">
          <p class="text-muted">Manage supported currencies.</p>
          <a href="/admin/settings/localization/currencies" class="btn btn-outline-primary">Manage Currencies</a>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Regions</h3>
        </div>
        <div class="card-body">
          <p class="text-muted">Manage regions and zones.</p>
          <a href="/admin/settings/localization/regions" class="btn btn-outline-primary">Manage Regions</a>
        </div>
      </div>
    </div>
  </div>
</div>
