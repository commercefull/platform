<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <a href="/b2b" class="brand-link">
    <img src="https://cdn.jsdelivr.net/npm/admin-lte@4.0.0-beta3/dist/img/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">B2B Portal</span>
  </a>

  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <img src="https://cdn.jsdelivr.net/npm/admin-lte@4.0.0-beta3/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
      </div>
      <div class="info">
        <a href="#" class="d-block">
          <% if (typeof user !== 'undefined' && user) { %>
            <%= user.name || user.email || 'User' %>
            <% if (user.role) { %>
              <small class="d-block text-muted"><%= user.role %></small>
            <% } %>
          <% } else { %>
            B2B User
          <% } %>
        </a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        
        <!-- Dashboard -->
        <li class="nav-item">
          <a href="/b2b" class="nav-link <% if (pageName === 'Dashboard') { %>active<% } %>">
            <i class="nav-icon fas fa-tachometer-alt"></i>
            <p>Dashboard</p>
          </a>
        </li>

        <!-- Catalog -->
        <li class="nav-item">
          <a href="/b2b/catalog" class="nav-link <% if (pageName.includes('Catalog')) { %>active<% } %>">
            <i class="nav-icon fas fa-th-large"></i>
            <p>Catalog</p>
          </a>
        </li>

        <!-- Quotes -->
        <li class="nav-item <% if (pageName.includes('Quote')) { %>menu-open<% } %>">
          <a href="#" class="nav-link <% if (pageName.includes('Quote')) { %>active<% } %>">
            <i class="nav-icon fas fa-file-invoice"></i>
            <p>
              Quotes
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/b2b/quotes" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>All Quotes</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/b2b/quotes/create" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Request Quote</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- Orders -->
        <li class="nav-item <% if (pageName.includes('Order')) { %>menu-open<% } %>">
          <a href="#" class="nav-link <% if (pageName.includes('Order')) { %>active<% } %>">
            <i class="nav-icon fas fa-shopping-cart"></i>
            <p>
              Orders
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/b2b/orders" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Order History</p>
              </a>
            </li>
          </ul>
        </li>

        <!-- Approvals (Only for approvers/admins) -->
        <% if (typeof user !== 'undefined' && user && (user.role === 'approver' || user.role === 'admin')) { %>
        <li class="nav-item <% if (pageName.includes('Approval')) { %>menu-open<% } %>">
          <a href="#" class="nav-link <% if (pageName.includes('Approval')) { %>active<% } %>">
            <i class="nav-icon fas fa-check-circle"></i>
            <p>
              Approvals
              <span class="badge badge-warning right">!</span>
              <i class="right fas fa-angle-left"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/b2b/approvals" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Pending</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/b2b/approvals/history" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>History</p>
              </a>
            </li>
          </ul>
        </li>
        <% } %>

        <!-- Users (Only for company admins) -->
        <% if (typeof user !== 'undefined' && user && user.role === 'admin') { %>
        <li class="nav-item">
          <a href="/b2b/users" class="nav-link <% if (pageName.includes('User')) { %>active<% } %>">
            <i class="nav-icon fas fa-users"></i>
            <p>Users</p>
          </a>
        </li>
        <% } %>

        <!-- Account -->
        <li class="nav-item">
          <a href="/b2b/account" class="nav-link <% if (pageName.includes('Account')) { %>active<% } %>">
            <i class="nav-icon fas fa-building"></i>
            <p>Account</p>
          </a>
        </li>

      </ul>
    </nav>
  </div>
</aside>
