# Production Environment Configuration
# Copy this file to .env.prod and configure with production values

# IMPORTANT: Generate strong, unique random values for all secrets!
# Use: openssl rand -hex 32 for 64-character secrets

PORT=3000
SERVERLESS=0
BASE_URL=https://yourdomain.com
SESSION_SECRET=your_64_character_hex_session_secret_here
APP_EMAIL=noreply@yourdomain.com
STRIPE_PRIVATE_KEY=sk_live_your_stripe_secret_key

# Production Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=commercefull_prod
POSTGRES_PASSWORD=your_secure_database_password_here
POSTGRES_DB=commercefull_prod

# Production Redis (required for session storage in production)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0

# JWT Secrets (generate unique values for each)
CUSTOMER_JWT_SECRET=your_customer_jwt_secret_here
MERCHANT_JWT_SECRET=your_merchant_jwt_secret_here

# Session and Cookie Security
SESSION_SECRET=your_64_character_hex_session_secret_here
COOKIE_SECRET=your_cookie_secret_here
COOKIE_DOMAIN=yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Configuration (Mailjet for production)
MJ_APIKEY_PUBLIC=your_mailjet_public_key
MJ_APIKEY_PRIVATE=your_mailjet_private_key

# External Services
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Analytics (Google Analytics)
GA_TRACKING_ID=GA_MEASUREMENT_ID

# Security Headers (Production)
NODE_ENV=production

# Database Connection URL (alternative to individual vars)
# DATABASE_URL=postgresql://commercefull_prod:password@postgres:5432/commercefull_prod

# Optional: AWS S3 for file storage
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_S3_BUCKET=your_s3_bucket_name
# AWS_REGION=us-east-1

# Optional: Redis URL (alternative to individual vars)
# REDIS_URL=redis://:password@redis:6379/0

# Optional: Monitoring and Logging
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# LOG_LEVEL=info
