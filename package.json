{
  "name": "commercefull",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=development nodemon app.ts",
    "migrate": "node-pg-migrate up",
    "migrate:new": "node-pg-migrate create $1",
    "migrate:rollback": "node-pg-migrate down",
    "prd": "yarn prd:build && yarn prd:run",
    "prd:run": "NODE_ENV=production node --env-file=.env --watch ./app.mjs",
    "prd:run:pm2": "NODE_ENV=production pm2 start -i max node --env-file=.env --name commercefull -- ./app.mjs",
    "prd:build": "npx esbuild app.ts --bundle --minify --platform=node --target=es2022 --format=esm --outfile=app.mjs --external:./node_modules/* --banner:js='import { createRequire as topLevelCreateRequire } from \"module\"; const require = topLevelCreateRequire(import.meta.url);'",
    "db": "docker run --rm -d -P -p 127.0.0.1:5432:5432 --env-file ./.env --name commerce-db postgres:alpine",
    "db:stop": "docker stop commerce-db",
    "test": "jest",
    "test:int": "jest",
    "test:e2e": "npx cypress run --headless --browser chrome",
    "cmd:new:merchant": "NODE_ENV=development node -r ts-node/register ./cmd/new-merchant.ts",
    "cmd:unused:code": "knip"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dinero.js": "^1.9.1",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.0.0",
    "i18next": "^24.1.2",
    "i18next-fs-backend": "^2.3.2",
    "i18next-http-middleware": "^3.6.0",
    "moment": "^2.30.1",
    "mongoose": "^8.12.2",
    "mongoose-slug-updater": "^3.3.0",
    "morgan": "^1.10.0",
    "node-mailjet": "^6.0.6",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "session": "^0.1.0",
    "stripe": "^17.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.7",
    "@types/dinero.js": "^1.9.4",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.6",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.16",
    "@types/pg": "^8.11.10",
    "cypress": "^13.17.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "dotenv": "^16.4.7",
    "esbuild": "^0.24.0",
    "jest": "^29.7.0",
    "knex": "^3.1.0",
    "knip": "^5.37.1",
    "node-pg-migrate": "^7.9.0",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
