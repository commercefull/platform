{
  "name": "commercefull",
  "version": "1.0.0",
  "main": "index.js",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "NODE_ENV=development nodemon app.ts",
    "migrate": "knex migrate:latest --env development",
    "migrate:new": "knex migrate:make",
    "migrate:rollback": "knex migrate:rollback --env development",
    "migrate:rollback:all": "knex migrate:rollback --all --env development",
    "seed": "knex seed:run --env development",
    "prd": "yarn prd:build && yarn prd:run",
    "prd:run": "NODE_ENV=production node --env-file=.env --watch ./app.mjs",
    "prd:run:pm2": "NODE_ENV=production pm2 start -i max node --env-file=.env --name commercefull -- ./app.mjs",
    "prd:build": "npx esbuild app.ts --bundle --minify --platform=node --target=es2022 --format=esm --outfile=app.mjs --external:./node_modules/* --banner:js='import { createRequire as topLevelCreateRequire } from \"module\"; const require = topLevelCreateRequire(import.meta.url);'",
    "db": "docker run --rm -d -P -p 127.0.0.1:5433:5432 --env-file ./.env --name commerce-db postgres:alpine",
    "db:stop": "docker stop commerce-db",
    "test": "jest",
    "test:int": "jest",
    "test:e2e": "npx cypress run --headless --browser chrome",
    "cli:new:merchant": "NODE_ENV=development node -r ts-node/register ./cli/new-merchant.ts",
    "knip": "knip",
    "update": "yarn upgrade --latest"
  },
  "dependencies": {
    "bcryptjs": "3.0.2",
    "body-parser": "2.2.0",
    "compression": "1.8.0",
    "connect-flash": "0.1.1",
    "connect-pg-simple": "10.0.0",
    "cookie-parser": "1.4.7",
    "dinero.js": "1.9.1",
    "ejs": "3.1.10",
    "express": "5.1.0",
    "express-session": "1.18.1",
    "express-validator": "7.2.1",
    "helmet": "8.1.0",
    "i18next": "25.2.1",
    "i18next-fs-backend": "2.6.0",
    "i18next-http-middleware": "3.7.4",
    "jsonwebtoken": "9.0.2",
    "moment": "2.30.1",
    "morgan": "1.10.0",
    "node-mailjet": "6.0.8",
    "nodemailer": "7.0.3",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "pg": "^8.16.3",
    "stripe": "18.2.1",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.6",
    "@types/compression": "1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "1.4.9",
    "@types/dinero.js": "1.9.4",
    "@types/ejs": "3.1.5",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/jest": "30.0.0",
    "@types/jsonwebtoken": "9.0.10",
    "@types/morgan": "1.9.10",
    "@types/node": "24.0.7",
    "@types/nodemailer": "6.4.17",
    "@types/passport": "1.0.17",
    "@types/pg": "8.15.4",
    "axios": "1.10.0",
    "cypress": "14.5.0",
    "cypress-cucumber-preprocessor": "4.3.1",
    "dotenv": "^17.2.1",
    "esbuild": "0.25.5",
    "jest": "30.0.3",
    "knex": "^3.1.0",
    "knip": "5.61.3",
    "nodemon": "3.1.10",
    "ts-jest": "29.4.0",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  }
}
